<%= form_for @user, :validate => true do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :maternal_name %>
    <%= f.text_field :maternal_name %>
  </div>
  <div class="field">
    <%= f.label :gender %>
    <%= f.select(:gender, options_for_select({"Femenino" => "F", "Masculino" => "M"}, @user.gender), :prompt => "Select") %>
  </div>
  <div class="field">
    <%= f.label :document_type %>
    <%= f.select(:document_type, options_for_select({"DNI" => "DNI", "TIU" => "TIU"}, @user.document_type), :prompt => "Select") %>
  </div>
  <div class="field">
    <%= f.label :document_number %>
    <%= f.text_field :document_number %>
  </div>
  <div class="field">
    <%= f.label :document_number_confirmation %>
    <%= f.text_field :document_number_confirmation %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'user@domain.com' %>
  </div>
  <div class="field">
    <%= f.label :password_digest  %>
    <%= f.password_field :password_digest %>
  </div>
      <div class="field">
    <%= f.label :password_digest_confirmation %>
    <%= f.password_field :password_digest_confirmation %>

  </div>
  <div class="actions">
    <%= f.submit :class => 'btn' %>
  </div>
<% end %>
