<h3>Ingresar</h3>

<p><%= link_to 'Log In with Facebook', "/auth/facebook", :class => 'btn btn-primary' %></p>

<hr>
  
<%= form_tag sessions_path do %>  
  <p>  
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>  
  </p>  
  <p>  
    <%= label_tag :password %>
    <%= password_field_tag :password %>  
  </p>  
  <p class="button"><%= submit_tag 'Sign In', :class => 'btn' %></p>  
<% end %>  